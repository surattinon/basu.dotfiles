// -*- mode: jsonc -*-
{
  "layer": "top", // Waybar at top layer
  "height": 30, // Waybar height (to be removed for auto height)
  "spacing": 4, // Gaps between modules (4px)

  "modules-left": ["custom/logo", "hyprland/workspaces", "custom/media"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "pulseaudio",
    "network",
    "cpu",
    "memory",
    "temperature",
    "battery",
    "clock",
    "hyprland/language",
    "custom/notification",
    "tray",
  ],

  "hyprland/language": {
    "format": "{}",
    "format-en": "US",
    "format-th": "TH",
  },
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": "false",
    "format": "{icon}",
    "persistent-workspaces": {
      "*": 3,
    },
  },
  "hyprland/window": {
    "format": "{initialTitle}",
    "separate-outputs": true,
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10,
  },
  "clock": {
    // "timezone": "America/New_York",
    "format": "{:%H:%M ‚èΩ %B %d }",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}",
  },
  "cpu": {
    "format": "{usage}%  Ôãõ",
    "tooltip": false,
  },
  "memory": {
    "format": "{}%  Ôîû",
  },
  "temperature": {
